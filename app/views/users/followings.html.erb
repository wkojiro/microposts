<%= render 'test' %>
<h1>following users (<%= @user.name %>) </h1>
<h3>フォローユーザー数：<%= @followings.count %></h3>
<div class="row"> 
   <% @followings.each do |followings| %>
     <% @user = followings %>
     <div class='col-sm-4'>
       <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class='panel-title'><%= followings.name %>(<%= followings.id %>)</h4>
        　</div>
        　　 <div class="panel-body">
          　<p>
          　　<%= followings.profile %></p>
          　<p>
          　　<%= followings.area %>
          　</p>
         </div>
         <div class='panel-footer'>
          <a class='btn btn-default' href='#'><%= followings.email %></a>
         　 <%= link_to 'プロフィールを確認', followings, class: "btn btn-primary" %>
              <% if current_user != @user %>
             <div id = "follow_form_<%= @user.id %>">
                <% if current_user.following?(@user) %>
                 <%= render 'unfollow' %>
                <% else %>
                 <%= render 'follow' %>
                <% end %>
             </div>
              <% end %>
            <% @user = current_user %>
　　　　 </div>
       </div>
    </div>    
    <% end %>

 </div>
 
